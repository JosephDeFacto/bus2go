{% extends 'base.html.twig' %}

{% block title %}Hello BuyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="sb--main-cart">
    <div class="sb--main__content">
        <div class="sb--main-info">
            {{ tickets['depart_from'] }}
            {{ tickets['travel_to'] }}
            {{ tickets['depart_on'] }}
            {{ tickets['return_on'] }}
            {{ tickets['departure_time'] }}
            {{ tickets['time_arrival'] }}
            {{ tickets['estimated_time'] }}
            {{ tickets['fee']|number_format(2, '.', '') }}
        </div>

    </div>

</div>
{% endblock %}
