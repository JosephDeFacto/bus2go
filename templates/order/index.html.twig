{% extends 'base.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% for cart in userCart %}
        {{ cart.travelSchedule.getDepartFrom }}
        {{ cart.travelSchedule.getTravelTo }}
        {{ cart.travelSchedule.getDepartingOn|date('d-m-Y') }}
        {{ cart.travelSchedule.getReturningOn|date('d-m-Y') }}
        {{ cart.travelSchedule.getDepartureTime|date('H:i') }}
        {{ cart.travelSchedule.getTimeOfArrival|date('H:i') }}
        {{ cart.travelSchedule.getEstimatedArrivalTime|date('H:i') }}
        {{ cart.getQuantity }}
        {{ cart.travelSchedule.getFee }}

        Total: {{ cart.travelSchedule.getFee * cart.getQuantity }}<br>

    {% endfor %}

        Your data:
        {{ user.firstname }} {{ user.lastname }} {{ user.mobile }} {{ user.email }}
    {{ form_start(orderForm) }}

    {{ form_end(orderForm) }}


</div>
{% endblock %}
